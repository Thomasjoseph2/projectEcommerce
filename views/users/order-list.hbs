<script>
    function cancelOrder(orderId) {
        // Display a confirmation dialog to the user
        if (confirm("Are you sure you want to cancel this order?")) {
            // AJAX Function for removing a product from cart
            $.ajax({
                url: '/cancel-order',
                data: {
                    orderId: orderId,
                },
                method: 'post',
                success: (response) => {
                    if (response.cancelrequest) {
                        alert("Cancel request send");
                        location.reload();
                    } else {
                        console.log("Some errors occurred");
                    }
                }
            });
        }
    }
       
       function returnOrder(orderId) {
        // Display a confirmation dialog to the user
        if (confirm("Are you sure you want to return this order?")) {
            // AJAX Function for removing a product from cart
            $.ajax({
                url: '/return-order',
                data: {
                    orderId: orderId,
                },
                method: 'post',
                success: (response) => {
                    if (response.returnrequest) {
                        alert("Cancel request send");
                        location.reload();
                    } else {
                         console.log("Some errors occurred");
                         alert("somethng went wrong");
                         location.reload();
                       
                    }
                }
            });
        }
    }


</script>