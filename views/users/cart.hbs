function removeProductFromCart(cartId, productId) {
    var confirmation = confirm("Are you sure you want to remove this product from the cart?");
    if (confirmation) {
        $.ajax({
            url: '/delete-product-from-cart',
            data: {
                cart: cartId,
                product: productId,
            },
            method: 'post',
            success: (response) => {
                if (response.cartProductRemoved) {
                    //alert("Product removed from cart");
                    location.reload();
                }
            }
        });
    }
}

