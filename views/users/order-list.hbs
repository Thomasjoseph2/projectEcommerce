        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                <h6 style="color:#fe7200">Date</h6>
                            </th>
                            <th scope="col">
                                <h6 style="color:#fe7200">order Id</h6>
                            </th>
                            <th scope="col">
                                <h6 style="color:#fe7200">Total Price</h6>
                            </th>
                            <th scope="col">
                                <h6 style="color:#fe7200">Method</h6>
                            </th>
                            <th scope="col">
                                <h6 style="color:#fe7200">Status</h6>
                            </th>
                            <th scope="col">
                                <h6 style="color:#fe7200">Adminstatus</h6>
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each orderdetails}}
                        <tr>
                            <td>
                                <div class="media">
                                    {{this.date}}
                                </div>
                            </td>
                            <td>{{this._id}}</td>
                            <td>
                                <h5>â‚¹{{this.totalAmound}}/-</h5>
                            </td>
                            <td>
                                <h5>{{this.paymentMethod}}</h5>
                            </td>
                            <td>
                                <h5>{{this.status}}</h5>
                            </td>
                            <td>
                                <h5>{{this.OrderStatus}}</h5>
                            </td>
                            <td>
                                {{#if (or (eq this.OrderStatus "approved") (eq this.OrderStatus "shipped")(eq this.OrderStatus "pending"))}}
                                <button class="quantity-btn btn-danger"
                                    onclick="cancelOrder('{{this._id}}')">Cancel</button>
                                {{/if}}
                            </td>


                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
